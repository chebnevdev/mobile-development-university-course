<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_3_3_button_text_size</item>
        <item name="android:radius">0dp</item>
    </style>

    <style name="CalculatorButton.Light" parent="CalculatorButton">
        <item name="android:background">@drawable/task_3_button_light</item>
    </style>

    <style name="CalculatorButton.Dark">
        <item name="android:background">@drawable/task_3_button_dark</item>
    </style>

    <style name="CalculatorButton.Orange">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/task_3_button_orange</item>
    </style>
</resources>